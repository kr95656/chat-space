.chat-main
  .chat-main__gruop-info
    %ul.info-menu
      %li.info-menu__group-info
        %p.group-info--name
          = @group.name
        %ul.group-info--member
          - @group.users.each do |user|
            %li.group-info--member__list= user.name
      %li.info-menu__group-info
        = link_to "#", class: "group-info--edit" do
          Edit
  .chat-main__message-list
    .messages
      = render @messages
